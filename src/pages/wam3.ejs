                        <td>þara suna</td>
                        <td>þære handa</td>
                        <td>þara handa</td>
                        <td>-a</td>
                        <td>-a</td>
                    </tr>
                    <tr>
                        <td class="strong">Dative</td>
                        <td>þæm suna</td>
                        <td>þæm sunum</td>
                        <td>þære handa</td>
                        <td>þæm handum</td>
                        <td>-a</td>
                        <td>-um</td>
                    </tr>
                </table>
            </div>
            <!--overview note for mobile-->
